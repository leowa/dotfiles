{
    "editor.fontSize": 18,
    "editor.folding": false,
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.formatOnSave": true,
    "vim.useCtrlKeys": true,
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.fontFamily": "Noto Mono for Powerline",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    "workbench.editor.showTabs": "single",
    "editor.stickyScroll.enabled": false,
    "workbench.colorTheme": "Base16 Dark Monokai",
    "workbench.colorCustomizations": {
        "statusBar.background": "#1A1A1A",
        "statusBar.noFolderBackground": "#212121",
        "statusBar.debuggingBackground": "#263238"
    },
    "window.nativeTabs": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": false,
    "files.insertFinalNewline": false,
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "git.countBadge": "off",
    "html.format.enable": false,
    "go.useLanguageServer": true,
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.testFlags": [
        "-v"
    ],
    "[go]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.formatOnSave": false
    },
    "[sls]": {
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnType": true,
    },
    // "black-formatter.args": [
    //     "--config", "{env:HOME}/.config/pyproject.toml"
    // ],
    "flake8.args": [
        "--max-line-length=125",
        "--ignore=E402,F841,F401,E302,E305,T201",
    ],
    "java.format.enabled": true,
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
    "java.format.settings.profile": "GoogleStyle",
    "latex-workshop.latex.build.forceRecipeUsage": true,
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.autoBuild.run": "onFileChange",
    "security.workspace.trust.untrustedFiles": "open",
    "redhat.telemetry.enabled": true,
    "files.associations": {
        "*.jina": "yaml",
        "*.sls": "sls"
    },
    "python.defaultInterpreterPath": "${env:HOME}/dev/py3/bin/python",
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": [
        "${workspaceFolder}",
        "${workspaceFolder}/fun",
        "${env:HOME}/dev/py3/~/dev/py3/lib/python3.12/site-packages",
    ],
    "editor.guides.indentation": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "editor.unicodeHighlight.allowedCharacters": {
        " ": true,
        "−": true
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "notebook.lineNumbers": "on",
    "jupyter.askForKernelRestart": false,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },
    "git.timeline.showAuthor": false,
    "go.toolsManagement.autoUpdate": true,
    "vsicons.dontShowNewVersionMessage": true,
    "gitlens.codeLens.enabled": false,
    "remote.autoForwardPorts": false,
    "terminal.integrated.detectLocale": "off",
    "git.openRepositoryInParentFolders": "never",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "workbench.activityBar.location": "hidden",
    "python.analysis.fixAll": [],
    "window.commandCenter": false,
    "editor.minimap.enabled": false,
    "editor.detectIndentation": false,
    "diffEditor.codeLens": true,
    "makefile.configureOnOpen": true,
}